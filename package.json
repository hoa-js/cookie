{
  "name": "@hoajs/cookie",
  "version": "0.1.0",
  "description": "cookie middleware for Hoa.",
  "main": "./dist/cjs/index.js",
  "type": "module",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "files": [
    "dist",
    "types",
    "CHANGELOG.md"
  ],
  "scripts": {
    "lint": "eslint",
    "build": "tsup",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "prepare": "husky"
  },
  "author": "nswbmw",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hoa-js/cookie.git"
  },
  "keywords": [
    "hoa",
    "middleware",
    "cookie"
  ],
  "devDependencies": {
    "@commitlint/cli": "20.0.0",
    "@commitlint/config-conventional": "20.0.0",
    "@jest/globals": "^30.2.0",
    "eslint": "9.36.0",
    "husky": "9.1.7",
    "jest": "30.1.3",
    "neostandard": "0.12.2",
    "ts-jest": "^29.4.4",
    "tsup": "8.5.0",
    "@hoajs/router": "0.1.0",
    "hoa": "0.1.0"
  },
  "peerDependencies": {
    "hoa": "*",
    "@hoajs/router": "*"
  },
  "engines": {
    "node": ">=20"
  }
}
