{
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "target": "ES2022",
    "baseUrl": "./",
    "paths": {
      "hoa": ["../hoa/types/index.d.ts"]
    },
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "dist"]
}
